= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'forms forms-columnar'}) do |f|
  = devise_error_messages!
  = f.hidden_field :reset_password_token
  %fieldset
    %legend= t '.change_your_password'
    %p
      = f.label :password, t('.new_password')
      = f.password_field :password, autofocus: true, class: 'width-100'
    %p
      = f.label :password_confirmation, t('.confirm_new_password')
      = f.password_field :password_confirmation, class: 'width-100'
    %p= f.submit t '.change_my_password'
    %p= render 'devise/shared/links'
