= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'forms forms-columnar'}) do |f|
  = devise_error_messages!
  %fieldset
    %legend= t '.forgot_your_password'
    %p
      = f.label :email
      = f.email_field :email, autofocus: true, class: 'width-100'
    %p= f.submit t '.send_me_reset_password_instructions'
    %p= render 'devise/shared/links'
