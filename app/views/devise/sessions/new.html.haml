= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'forms forms-columnar'}) do |f|
  %fieldset
    %legend= t '.sign_in'
    %p
      = f.label :email
      = f.email_field :email, autofocus: true, class: 'width-100'
    %p
      = f.label :password
      = f.password_field :password, class: 'width-100'
    - if devise_mapping.rememberable?
      %p
        = f.label :remember_me
        = f.check_box :remember_me
    %p= f.submit t '.sign_in'
    %p= render 'devise/shared/links'
